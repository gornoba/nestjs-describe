<head>
  <title>My Page</title>
</head>

<body>
  <div style='display: flex; flex-direction: column;'>
    <a id='kakao-login-btn'>
      <img
        src='https://k.kakaocdn.net/14/dn/btroDszwNrM/I6efHub1SN5KCJqLm1Ovx1/o.jpg'
        width='222'
        height='50'
        alt='카카오 로그인 버튼'
      />
    </a>
    <a id='naver-login-btn' style='margin-top: 1rem;'>
      <img
        src='http://static.nid.naver.com/oauth/small_g_in.PNG'
        width='222'
        height='50'
        alt='네이버 로그인 버튼'
      />
    </a>
    <a id='google-login-btn' style='margin-top: 1rem;'>
      <img
        alt='&amp;#39;Google 계정으로 로그인&amp;#39;이라는 표준 버튼'
        src='https://developers.google.com/static/identity/gsi/web/images/standard-button-blue.png?hl=ko'
        width='222'
        height='50'
      />
    </a>
  </div>

  <script>
    document.getElementById('kakao-login-btn').addEventListener('click',
    function() { window.location.href =
    'http://localhost:3000/api/kakao-login/authorize'; });
    document.getElementById('naver-login-btn').addEventListener('click',
    function() { window.location.href =
    'http://localhost:3000/api/naver-login/authorize'; });
    document.getElementById('google-login-btn').addEventListener('click',
    function() { window.location.href =
    'http://localhost:3000/api/google-login/authorize'; });
  </script>

</body>
